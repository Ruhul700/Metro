            }
            catch (Exception ex)
            {
                return Json(ex.Message, JsonRequestBehavior.AllowGet);
            }
        }

        [HttpPost]
        public ActionResult LoadEmployeeAllData(T19010Data param)
        {
            try
            {
                var data = repository.LoadEmployeeAllData(param);
