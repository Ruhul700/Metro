
@{
    ViewBag.Title = "T11021";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Apps/Security/Transaction/T11021Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<style>
    /*.selected {
        background-color: #80c8e4ba;*/
        /* color: white;*/
        /*font-weight: bold;
    }*/

    .pincode {
        -webkit-text-security: disc;
        -moz-text-security: disc;
        text-security: disc;
    }
</style>
<div class="" ng-app="Glorious" ng-controller="T11021Controller">
    @*header*@
    <div ng-show="loading" class="loder"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">User Authentication</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            @*<a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
                <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>*@
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 90%;">
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">Code</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <input type="text" ng-model="obj.T11021.T_USER_CODE" class="form-control" ng-dblclick="onDbMobile_Click()" readonly />
                </td>
                <td style=" width: 10%;">
                    <label id="lblName" class="textlevel"> Name</label>
                </td>
                <td colspan="3" style="width: 40%; text-align: left; ">
                    <input id="txtName" type="text" ng-model="obj.T11021.T_USER_NAME" class="form-control" readonly />
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel"> Mobile</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input id="txtMobile" type="text" ng-model="obj.T11021.T_USER_MOBILE" class="form-control" readonly />
                </td>
            </tr>
            <tr>
                <td style=" width: 10%;">
                    <label id="lblRoll" class="textlevel">User roll</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <select id="ddlRoll" class="form-control" placeholder="Select one"
                            ng-model="obj.ddlRoll"
                            ng-options=" R.T_ROLL_NAME for R in obj.rollDataList track by R.T_ROLL_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
                <td style=" width: 10%;">
                    <label id="lblUserId" class="textlevel"> User Id</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="text" id="txtUserId" ng-model="obj.T11021.T_USER_ID" class="form-control" />
                </td>
                <td style=" width: 10%;">
                    <label id="lblPassword" class="textlevel"> Pass word</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <input id="txtPassword" type="text" ng-model="obj.T11021.T_USER_PASS" class="form-control pincode" />
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel"> Active</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="checkbox" ng-model="obj.T11021.T_ACTIVE_FLAG" ng-true-value="'1'" ng-false-value="'0'" />
                </td>

            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <div style="width: 70%;margin:auto">
            <table class="inputTable center" style=" width: 100%;">
                <tr><td style="text-align: -webkit-right;"> <input type="text" style="width:200px" ng-model="Search" placeholder="Search....." class="form-control" /></td></tr>
            </table>
            <table id="tblGrid" class="tTable center" style=" width: 100%;">
                <thead>
                    <tr style="color: black;background: #afadad" class="summary-table-header">
                        <th style="width: 10%;">Code</th>
                        <th style="width: 30%;">Name</th>
                        <th style="width: 15%;">Mobile</th>
                        <th style="width: 15%;">User Roll</th>
                        <th style="width: 10%;">User Id</th>
                        <th style="width: 10%;">Pass word</th>
                        <th style="width: 10%;">Act</th>

                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="Z in obj.griDataList|filter:Search|itemsPerPage:10" $index pagination-id="details" ng-class="{'selected':$index == selectedRow}" ng-click="selectedtRow($index,Z)" style="cursor:pointer">
                        <td style="width: 10%;">{{Z.T_EMP_ID}}</td>
                        <td style="width: 30%; text-align: left; padding-left: 10px;">{{Z.T_USER_NAME}}</td>
                        <td style="width: 15%; text-align: left; padding-left: 10px;">{{Z.T_USER_MOBILE}}</td>
                        <td style="width: 15%; text-align: left; padding-left: 10px;">{{Z.T_ROLL_NAME}}</td>
                        <td style="width: 10%; text-align: left; padding-left: 10px;">{{Z.T_USER_ID}}</td>
                        <td style="width: 10%; text-align: left; padding-left: 10px;" class="pincode">{{Z.T_USER_PASS}}</td>
                        <td style="width: 10%; text-align: left; padding-left: 10px;">
                            <input type="checkbox" ng-model="Z.T_ACTIVE_FLAG" ng-true-value="'1'" ng-false-value="'0'" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <dir-pagination-controls pagination-id="details" max-size="5"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>

        </div>
    </div>
    @*---user modal start---*@
    <div id="UserList" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-head">
                <span class="closemodal" ng-click="closeModal('UserList')">&times;</span>
                <h5>Employee list</h5>
            </div>
            <div class="modal-body">
                <table class="inputTable center" style=" width: 100%;">
                    <tr><td style="text-align: -webkit-right;"> <input type="text" style="width:200px" ng-model="Search" placeholder="Search....." class="form-control" /></td></tr>
                </table>
                <table id="tblPopup" class="popupTable">
                    <tr>
                        <th style="width:10%">Code</th>
                        <th style="width:30%">Name</th>
                        <th style="width:20%">Mobile</th>
                    </tr>
                    <tbody id="tboodPopup">
                        <tr dir-paginate="X in obj.UserList|filter:Search|itemsPerPage:15" $index pagination-id="dataList" ng-class="{'selected':$index == selectedRow}" ng-click="setEmployeeRow($index,X)" style="cursor:pointer">
                            <td style="width:10%">{{X.T_USER_CODE}}</td>
                            <td style="width:30%">{{X.T_USER_NAME}}</td>
                            <td style="width:20%">{{X.T_USER_MOBILE}}</td>
                        </tr>
                    </tbody>
                </table>
                <dir-pagination-controls pagination-id="dataList" max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </div>

        </div>

    </div>
    @*---User modal end---*@


</div>




