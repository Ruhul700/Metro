
@{
    ViewBag.Title = "R13002";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Apps/Accounts/Report/R13002Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<div class="" ng-controller="R13002Controller">
    @*header*@
  
    <div class="header">
        <span href="#default" class="logo">Financial Report</span>
        <div class="header-right">
            @*<a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>*@
            <a><span title="Refresh" ng-click="Refresh_Click()" class="glyphicon glyphicon-refresh"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            @*<a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>*@
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 90%;">
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">Center</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <select id="ddlCenter" class="form-control" placeholder="Select one"
                            ng-model="obj.ddlCenter"
                            ng-change="obj.SelectCenter()"
                            ng-options="V.CENTER_NAME for V in obj.CenterList track by V.CENTER_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel">From Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.R13002.FROM_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel">To Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.R13002.TO_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;"> </td>
            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />

        <div style="width: 95%;">

            <table id="tblGrid" class="tTable center" style=" width: 50%;">
                <thead>
                    <tr style="color: black;background: #afadad" class="summary-table-header">
                        <th style="width: 10%;"></th>
                        <th style="width: 90%; font-size: 18px; text-align: left; padding-left: 10px;">Report Title</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width: 10%;">
                            <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('Trial')" ng-model="obj.Trail_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                        </td>
                        <td style="width: 90%; text-align: left; padding-left: 10px;">Trial Balance</td>
                    </tr>
                    <tr>
                        <td style="width: 10%;">
                            <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('Income')" ng-model="obj.Income_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                        </td>
                        <td style="width: 90%; text-align: left; padding-left: 10px;">Income Statement</td>

                    </tr>

                    <tr>
                        <td style="width: 10%;">
                            <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('Balance')" ng-model="obj.Balace_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                        </td>
                        <td style="width: 90%; text-align: left; padding-left: 10px;">Balance Sheet</td>

                    </tr>
                    <tr>
                        <td style="width: 10%;">
                            <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('IntialBalance')" ng-model="obj.IntialBalance_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                        </td>
                        <td style="width: 90%; text-align: left; padding-left: 10px;">Cash & Bank Intial Balance</td>
                    </tr>
                </tbody>
            </table>


        </div>
    </div>
</div>



