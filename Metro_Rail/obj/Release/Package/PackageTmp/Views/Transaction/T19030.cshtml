
@{
    ViewBag.Title = "T19030";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Apps/Payroll/Transaction/T19030Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<div ng-controller="T19030Controller">
    @*header*@
    <div class="header">
        <span href="#default" class="logo">Attendance</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 80%;">
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">Code</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <input type="text" ng-model="obj.T19030.T_ATTENDENCE_CODE" class="form-control" readonly />
                </td>
                <td style=" width: 10%;">
                    <label id="lblMonth" class="textlevel">Month</label>
                </td>
                <td style="width: 40%; text-align: left; ">
                    <select id="ddlMonth" class="form-control" placeholder="Select one" tabindex="1"
                            ng-model="obj.ddlMonth"
                            ng-change="onMonth()"
                            ng-options="V.T_MONTH_NAME for V in obj.monthList track by V.T_MONTH_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
                <td style=" width: 20%;">
                    <label id="lblT.W.Day" class="textlevel">Total Working Day</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <input id="txtT.W.Day" type="number" ng-model="obj.T19030.T_WORKING_DAY" class="form-control" />
                </td>
            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <div style="width: 80%;margin:auto">
            <table class="inputTable center" style=" width: 100%;">
                <tr><td style="text-align: -webkit-right;"> <input type="text" style="width:200px" ng-model="Search" placeholder="Search....." class="form-control" /></td></tr>
            </table>
            <table id="tblGrid" class="tTable center" style=" width: 100%;">
                <thead>
                    <tr style="color: black;background: #afadad" class="summary-table-header">
                        <th style="width: 20%;">Code</th>
                        <th style="width: 50%;">Name</th>
                        <th style="width: 10%;">Present</th>
                        <th style="width: 10%;">Late</th>
                        <th style="width: 10%;">Absent</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="Z in obj.griDataList" ng-class="{'selected':$index == selectedRow}" ng-click="setProductRow($index,Z)" style="cursor:pointer">
                        <td style="width: 20%;">{{Z.T_EMP_CODE}}</td>
                        <td style="width: 50%; text-align: left;">{{Z.T_EMP_NAME}}</td>
                        <td style="width: 10%; text-align: left;">
                            <input type="number" ng-model="Z.T_TOTAL_PRESENT" class="form-control" style="width: 90%;" ng-keyup="onPresent($index,Z)" />
                        </td>
                        <td style="width: 10%; text-align: left;">
                            <input type="text" ng-model="Z.T_TOTAL_LATE" class="form-control" style="width: 90%;" />
                        </td>
                        <td style="width: 10%; text-align: left;">
                            <input type="text" ng-model="Z.T_TOTAL_ABSENT" class="form-control" style="width: 90%;" readonly />
                        </td>
                    </tr>
                </tbody>
            </table>


        </div>
    </div>

</div>

