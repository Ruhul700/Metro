
@{
    ViewBag.Title = "AT13004";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Apps/Accounts/Transaction/T13004Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>

<div class="" ng-controller="T13004Controller">
    @*header*@
    <div class="header">
        <span href="#default" class="logo">Voucher List</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            <a><span title="Clear" ng-click="Refresh_Click()" class="glyphicon glyphicon-refresh"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 90%;">
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">Center</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <select id="ddlCenter" class="form-control" placeholder="Select one"
                            ng-model="obj.ddlCenter"
                            ng-change="obj.SelectCenter()"
                            ng-options="V.CENTER_NAME for V in obj.CenterList track by V.CENTER_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel">From Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.T13004.FROM_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel">To Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.T13004.TO_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;"> </td>
            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <table class="inputTable center" style=" width: 95%;">
            <tr>
                <td style=" width: 20%;">
                    <label class="textlevel" style="text-align:left">Total Voucher: <span style="margin-left:15px">{{obj.TotalVoucher}}</span></label>
                </td>

                <td style=" width: 20%;">
                    <label class="textlevel">Total Verify:<span style="margin-left:15px">{{obj.TotalVerify}}</span></label>
                </td>
                <td style="width: 20%; ">
                    <label class="textlevel">Total Posting:<span style="margin-left:15px">{{obj.TotalPosting}}</span></label>
                </td>
                <td style=" width: 40%;"> </td>
            </tr>
        </table>
        <table id="tblGrid" class="tTable center" style=" width: 95%;">
            <thead>
                <tr style="color: black;text-align: center;background: #afadad" class="summary-table-header">
                    <th style="width: 3%;font-size: 18px;">SL</th>
                    <th style="width: 20%;text-align: center;font-size: 18px;">Center</th>
                    <th style="width: 12%;font-size: 18px;">Voucher No</th>
                    <th style="width: 10%;font-size: 18px;">Voucher Date</th>
                    <th style="width: 10%;font-size: 18px;">Voucher Type</th>
                    <th style="width: 10%;font-size: 18px;">Party</th>
                    <th style="width: 10%;font-size: 18px;">Amount</th>
                    <th style="width: 10%;font-size: 18px;">User</th>
                    <th style="width: 5%;font-size: 18px;">Verify</th>
                    <th style="width: 5%;font-size: 18px;">Posting</th>
                    <th style="width: 5%;font-size: 18px;">
                        <input type="checkbox" style=" width: 20%;" ng-click="PrintAll_Click()" ng-model="obj.PrintAll_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="Z in obj.VoucherList">
                    <td style="width: 3%">{{Z.SL_NO}}</td>
                    <td style="width: 20%">{{Z.CENTER_NAME}}</td>
                    <td style="width: 12%">{{Z.VOUCHER_NO}}</td>
                    <td style="width: 10%">{{Z.VOUCHER_DATE}}</td>
                    <td style="width: 10%">{{Z.VAUCHER_TYPE_NAME}} </td>
                    <td style="width: 10%">{{Z.PARTY_NAME}} </td>
                    <td style="width: 10%">{{Z.TOTAL_DEBIT}}</td>
                    <td style="width: 10%">{{Z.T_USER_NAME}}</td>
                    <td style="width: 5%;">
                        <input type="checkbox" style=" width: 20%;" ng-model="Z.VERIFY_FLG" ng-true-value="'1'" ng-false-value="'0'" disabled />
                    </td>
                    <td style="width: 5%;">
                        <input type="checkbox" style=" width: 20%;" ng-model="Z.POSTING_FLG" ng-true-value="'1'" ng-false-value="'0'" disabled />
                    </td>
                    <td style="width: 5%;">
                        <input type="checkbox" style=" width: 20%;" ng-click="PrintSingle_Click($index,Z.VOUCHER_NO)" ng-model="Z.PrintSingle_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>


