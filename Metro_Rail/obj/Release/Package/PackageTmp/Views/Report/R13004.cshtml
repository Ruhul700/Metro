
@{
    ViewBag.Title = "R13004";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Apps/Accounts/Report/R13004Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<link href="~/Content/selectize.default.css" rel="stylesheet" />
<link href="~/Content/select.css" rel="stylesheet" />
<style>
    .select2 > .select2-choice.ui-select-match {
        /* Because of the inclusion of Bootstrap */
        height: 29px;
    }

    .selectize-control > .selectize-dropdown {
        top: 36px;
    }
</style>
<div class="" ng-controller="R13004Controller">
    @*header*@
    <div ng-show="loading" style="position: absolute;padding-left: 48%; margin-top:60px;z-index:1"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Customer Report</span>
        <div class="header-right">
            @*<a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>*@
            <a><span title="Refresh" ng-click="Refresh_Click()" class="glyphicon glyphicon-refresh"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            @*<a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>*@
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 50%;">
            <tr ng-show="obj.isShow_CustSammary">
                <td style=" width: 10%;">
                    <label class="textlevel">Customer Name</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <select id="ddlPartyType" class="form-control" placeholder="Select one"
                            ng-model="obj.ddlPartyType"
                            ng-change="obj.SelectPartyType()"
                            ng-options=" PT.PARTY_TYPE_NAME for PT in obj.PartyTypeList track by PT.PARTY_TYPE_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
                <td style=" width: 10%;"> </td>
            </tr>
            <tr ng-show="obj.isShow_Statment">
                <td style=" width: 20%;">
                    <label class="textlevel">Customer Name</label>
                </td>
                <td colspan="3" style="width: 80%; text-align: left; ">
                    <ui-select id="ddlCustormerName" ng-model="obj.ddlCustormerName" theme="selectize" style="width: 100%;text-align:left">
                        <ui-select-match placeholder="Select or search ">{{$select.selected.CUST_NAME}}</ui-select-match>
                        <ui-select-choices repeat="A in obj.CustomerList | filter: $select.search">
                            <span ng-bind-html="A.CUST_NAME | highlight: $select.search"></span>
                        </ui-select-choices>
                    </ui-select>
                </td>
            </tr>
            <tr ng-show="obj.isShow_Statment">
                <td style=" width: 20%;">
                    <label class="textlevel">From Date</label>
                </td>
                <td style="width: 30%; text-align: left; ">
                    <input type="date" ng-model="obj.AR14004.FROM_DATE" class="form-control" />
                </td>
                <td style=" width: 20%;">
                    <label class="textlevel">To Date</label>
                </td>
                <td style="width: 30%; text-align: left; ">
                    <input type="date" ng-model="obj.AR14004.TO_DATE" class="form-control" />
                </td>
            </tr>

        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />

        <div style="width: 95%;">

            <table id="tblGrid" class="tTable center" style=" width: 50%;">
                <thead>
                    <tr style="color: black;background: #afadad" class="summary-table-header">
                        <th style="width: 10%;"></th>
                        <th style="width: 90%; font-size: 18px; text-align: left; padding-left: 10px;">Report Title</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width: 10%;">
                            <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('CsmrSummary')" ng-model="obj.Summary_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                        </td>
                        <td style="width: 90%; text-align: left; padding-left: 10px;">All Customer Summary</td>
                    </tr>
                    <tr>
                        <td style="width: 10%;">
                            <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('CustStatment')" ng-model="obj.Statment_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                        </td>
                        <td style="width: 90%; text-align: left; padding-left: 10px;">Customer Statment</td>

                    </tr>
                    @*<tr>
                            <td style="width: 10%;">
                                <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('InSupDetlUnProject')" ng-model="obj.Ind_Suplr_Und_Proj_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                            </td>
                            <td style="width: 90%; text-align: left; padding-left: 10px;">Individual Supplier Details Under Project</td>

                        </tr>*@
                    @*<tr>
                            <td style="width: 10%;">
                                <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('InSupAllProjSummary')" ng-model="obj.Ind_Suplr_All_Proj_Summary_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                            </td>
                            <td style="width: 90%; text-align: left; padding-left: 10px;">Individual Supplier All Project Summary</td>

                        </tr>*@
                    @*<tr>
                            <td style="width: 10%;">
                                <input type="checkbox" style=" width: 20%;" ng-click="CheckSingle_Click('AllProjStatement')" ng-model="obj.AllProjStatement_FLG" ng-true-value="'1'" ng-false-value="'0'" />
                            </td>
                            <td style="width: 90%; text-align: left; padding-left: 10px;">All Project Statement</td>

                        </tr>*@
                </tbody>
            </table>


        </div>
    </div>
</div>

