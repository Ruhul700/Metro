
@{
    ViewBag.Title = "T12003";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Apps/Budget/Setup/T12003Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>

<div class="" ng-controller="T12003Controller">
    @*header*@
    <div ng-show="loading" style="position: absolute; padding-left: 48%; margin-top: 60px; z-index: 1"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Create Project</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 98%;">
            <tr>
                <td style=" width: 10%;">
                    <label id="lblCode" class="textlevel">Code</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <input id="txtCode" type="text" ng-model="obj.T12003.T_PROJECT_CODE" class="form-control" readonly />
                </td>
                <td style=" width: 10%;">
                    <label id="lblName" class="textlevel">Project Name</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input id="txtName" type="text" ng-model="obj.T12003.T_PROJECT_NAME" class="form-control" />
                </td>
                <td style=" width: 10%;">
                    <label id="lblPeriod" class="textlevel">Period</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <select style=" width: 98%;" id="ddlPeriod" class="form-control" placeholder="Select one" tabindex="5"
                            ng-model="obj.ddlPeriod"
                            ng-change="changePeriod(obj.ddlPeriod)"
                            ng-options=" V.T_PERIOD_NAME for V in obj.periodDataList track by V.T_PERIOD_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
                <td style=" width: 10%;">
                    <label id="lblStartDate" class="textlevel">Start Date</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <input id="txtStartDate" type="date" ng-model="obj.T_PERIOD_START_DATE" class="form-control" />
                </td>
                <td style=" width: 10%;">
                    <label id="lblEndDate" class="textlevel">End Date</label>
                </td>
                <td style="width: 10%; text-align: left; ">
                    <input id="txtEndDate" type="date" ng-model="obj.T_PERIOD_END_DATE" class="form-control" />
                </td>

            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <div style="width: 95%;">
            <table class="inputTable center" style=" width: 50%;">
                <tr><td style="text-align: -webkit-right;"> <input type="text" style="width:200px" ng-model="Search" placeholder="Search....." class="form-control" /></td></tr>
            </table>

            <table id="tblGrid" class="tTable center" style=" width: 50%;">
                <thead>
                    <tr style="color: black;background: #afadad" class="summary-table-header">
                        <th style="width: 20%;">Code</th>
                        <th style="width: 40%;">Name</th>
                        <th style="width: 20%;">Start Date</th>
                        <th style="width: 20%;">End Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="Z in obj.griDataList|filter:Search|itemsPerPage:10" $index pagination-id="dataList" ng-class="{'selected':$index == selectedRow}" ng-click="setProductRow($index,Z)" style="cursor:pointer">
                        <td style="width: 20%;">{{Z.T_PROJECT_CODE}}</td>
                        <td style="width: 40%; text-align: left; padding-left: 10px;">{{Z.T_PROJECT_NAME}}</td>
                        <td style="width: 20%; ">{{Z.T_PERIOD_START_DATE}}</td>
                        <td style="width: 20%; ">{{Z.T_PERIOD_END_DATE}}</td>
                    </tr>
                </tbody>
            </table>
            <dir-pagination-controls pagination-id="details" max-size="5"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>

        </div>
    </div>

</div>



